        <link rel="stylesheet" href="{{ asset('build/css/responsive/big-size.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/responsive/tablet.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/responsive/mobile.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/styles.css') }}">
        {% block stylesheets %}{% endblock %}
