        console.log('Version mobile et tablet');
     }else {
        document.writeln('<link href="{{ asset('build/css/responsive/medium-size.css') }}" media="all" rel="stylesheet" type="text/css" />');
        document.writeln('<link href="{{ asset('build/css/responsive/small-size.css') }}" media="all" rel="stylesheet" type="text/css" />');
        console.log('Version web');
  }
    </script>
