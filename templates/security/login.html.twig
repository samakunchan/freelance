{% extends "base.html.twig" %}

{% block body %}
    <h1>Connection sur le site</h1>
    {% if error %}
        <div class="alert alert-dismissible alert-warning">
            <h4 class="alert-heading">Erreur!</h4>
            <p class="mb-0">Le login et/ou le mot de passe est incorrect</p>
        </div>
    {% endif %}
    <div>
        <a href="{{ path('home') }}" class="btn btn-outline-info">Retour vers la page d'accueil</a>
    </div>
    <form action="{{ path('login_sama') }}" method="post">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" id="email" required name="_username" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" required name="_password" class="form-control">
        </div>
        <div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" checked />
            <label for="remember_me">Se souvenir de moi</label>
        </div>
        <button class="btn btn-primary" type="submit">Se connecter</button>
    </form>

{% endblock %}